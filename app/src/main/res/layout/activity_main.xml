<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorPrimary"
    android:padding="10dp"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:background="@drawable/blue_button"
            android:id="@+id/playsound1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="play1"/>
        <Button
            android:background="@drawable/blue_button"
            android:layout_marginLeft="5dp"
            android:id="@+id/playsound2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="play2"/>
        <Button
            android:background="@drawable/blue_button"
            android:layout_marginLeft="5dp"
            android:id="@+id/playsound3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="play3"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:background="@drawable/purple_button"
            android:layout_marginTop="5dp"
            android:id="@+id/playsound4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="play4"/>
        <Button
            android:background="@drawable/orange_button"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/playsound5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="play5"/>
        <Button
            android:background="@drawable/pink_button"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/playsound6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="play6"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:background="@drawable/green_button"
            android:layout_marginTop="5dp"
            android:id="@+id/playsound7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="play7"/>
        <Button
            android:background="@drawable/green_button"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/playsound8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="play8"/>
        <Button
            android:background="@drawable/pink_button"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/playsound9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="play9"/>
    </LinearLayout>



</LinearLayout>